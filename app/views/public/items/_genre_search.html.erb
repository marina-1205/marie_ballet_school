<div class="genre-card mb-3" style="max-width: 18rem; background-color: rgba(60, 42, 33, 0.5); color: #ffffff">
  <div class="card-header" style="background-color: #F1D4E5; text-align: center;">❤︎ 検 索 ❤︎</div>
  <div class="card-body" style="background-color: #ffffff; color: #FCE9F1">
    <ul style="text-align: center;">
      <% genres.each do |genre| %>
        <div>
          <%= link_to genre_path(genre) do %>
            <p class="genre-card-text"><%= genre.name %></p>
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
