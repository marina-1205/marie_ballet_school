<div class="container">
  <h2>注文履歴詳細</h2>

  <div class="row">
    <div class="col-md-8">
      <h4 class="col-5 text-center" style="background:#EAC7C7">注文情報</h4>
      <table class="table table-bordered table-secondary">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              〒<%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col">
        <h4 class="col text-center" style="background:#EAC7C7">請求情報</h4>
        <table class="table table-bordered table-secondary">
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= (@order.total_amount - @order.postage).to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.postage.to_s(:delimited) %></td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_amount.to_s(:delimited) %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <h4 class="col-5 text-center" style="background:#EAC7C7">注文内容</h4>
      <table class="table table-bordered table-secondary">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @order.order_items.each do |order_item| %>
          <tbody>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.price.to_s(:delimited) %>円</td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.subtotal.to_s(:delimited) %>円</td>
          </tbody>
        <% end %>
      </table>
    </div>
    <div>
      <%= link_to "一覧に戻る", orders_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>