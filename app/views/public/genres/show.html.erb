<div class="container">
  <div class="row">
     <div class="col-md-3">
     <div class="genre-list">
  <%= render 'public/items/genre_search', genres: @genres %>
</div>
</div>
    <div class="col-md-9">
      <h3 class="text-center">商品検索結果♡</h3>
      
      <% @genre.items.in_groups_of(4, false) do |item_group| %>
        <div class="card-deck">
          <% item_group.compact.each do |item| %>
            <div class="card w-33">
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_item_image, class: "card-img-top", alt: item.name %>
                <div class="card-body text-center">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text">￥<%= (item.price).round %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
      
    </div>
    <div class="col-md-2"></div>
  </div>
  <br><br>
  <div class="text-center"><%= link_to "TOPページに戻る", root_path %></div>
</div>