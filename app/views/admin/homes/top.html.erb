<div class="container">
  <div class="row">
       <div class="col-12 text-center"><%= image_tag "goodjob.jpg", size: "1000x350" %></div>
       <br>
  <div class="col">
      <h4 class="col-12 text-center">レンタル注文履歴</h4>
      <div class="table-responsive">
        <table class="table table-sm custom-table table-bordered">
          <thead style="color: #FFF; font-weight: bold; background:#D5B4B4;">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.created_at.strftime("%Y年%m月%d日"), admin_order_path(order) %></td>
                <td><%= order.full_name %> 様</td>
                <td><%= order.order_items.sum(:quantity) %>着</td>
                <td><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <p class="text-center mt-5">
      <a href="<%= admin_orders_path %>" class="link">すべての履歴を見る</a>
    </p>
  </div>
  
   <div class="col">
      <h4 class="col-12 text-center">レッスン体験予約</h4>
      <div class="table-responsive">
        <table class="table table-sm custom-table table-bordered">
          <thead style="color: #FFF; font-weight: bold; background:#D5B4B4;">
            <tr>
              <th>予約日時</th>
              <th>予約者</th>
              <th>希望日</th>
              <th>予約ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @reserves.each do |reserve| %>
              <tr>
                <td><%= link_to reserve.created_at.strftime("%Y年%m月%d日"), admin_reserves_path(reserve) %></td>
                <td><%= reserve.last_name %><%= reserve.first_name %> 様</td>
                <td><%= reserve.reservation_date.strftime("%Y年%m月%d日") %></td>
                <td><%= reserve.reservation_status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <p class="text-center mt-5">
      <a href="<%= admin_reserves_path %>" class="link">すべての体験予約を見る</a>
    </p>
  </div>

  </div>
</div>