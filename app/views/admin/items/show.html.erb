<div class="container">
  <div class="row">
    <!-- 空のdivタグ（インデント整形のため） -->
  </div>

  <div class="row">
    <div class="col-sm-20 px-sm-0 mx-auto mb-5">
      <h2>☺︎商品詳細☺︎</h2>
      
      <% if @item.image.attached? %>
  <div class="text-center">
    <%= image_tag @item.image, style: "max-width: 400px; max-height: 400px; height: auto; display: block; margin: 0 auto;" %>
  </div>
<% else %>
  <p class="text-center">No image available</p>
<% end %>
>


      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>価格</td>
          <td class="align-middle"><%= number_to_currency(@item.price, unit: '¥', format: '%u%n', delimiter: ',') %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_available ? '販売中' : '販売停止中' %></td>
        </tr>
      </table>

      <div class="form-action">
        <%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-primary", style: "background-color: #FEE3EC;" %>
        <%= link_to "一覧に戻る", admin_items_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>