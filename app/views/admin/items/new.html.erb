<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>☺︎商品新規登録☺︎</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_for @item, url: admin_items_path, method: :post, html: { multipart: true } do |f| %>
        <table>
          <tr>
            <th><%= f.label :商品画像 %></th>
            <td>
              <% if @item.image.attached? %>
                <%= image_tag @item.image, style: "max-width: 200px;" %>
              <% else %>
                <%= "No image available" %>
              <% end %>
              <%= f.file_field :image %>
            </td>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name, placeholder: "商品名" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :商品説明 %></th>
              <td><%= f.text_area :introduction, size: "50x5", placeholder: "ここに説明文を記述" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :ジャンル %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :税抜価格 %></th>
              <td><%= f.text_field :price, placeholder: "値段" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :販売ステータス %></th>
              <td>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_available, true, class: 'form-check-input' %>
                  <%= f.label :is_available, '販売中', class: 'form-check-label' %>
                </div>

                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_available, false, class: 'form-check-input' %>
                  <%= f.label :is_available, '販売停止中', class: 'form-check-label' %>
                </div>
              </td>
            </div>
          </tr>

          <tr>
            <div class="form-action">
              <th><%= f.submit "新規登録", class: "btn btn-success", style: "background-color: #dc8ba7;" %></th>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>