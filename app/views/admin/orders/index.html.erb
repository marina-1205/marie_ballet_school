<div class="container">
  <div class="row">
  <div class="col">
      <h4 class="col-12 text-center">注文履歴一覧</h4>
      <div class="table-responsive">
        <table class="table table-sm custom-table table-bordered">
          <thead style="color: #FFF; font-weight: bold; background:#D5B4B4;">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.created_at.strftime("%Y年%m月%d日"), admin_order_path(order) %></td>
                <td><%= order.full_name %> 様</td>
                <td><%= order.order_items.sum(:quantity) %>着</td>
                <td><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-3 mx-auto">
    <strong>
      <%= paginate @orders %>
    </strong>
  </div>
</div>